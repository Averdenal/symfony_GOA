{% extends 'base.html.twig' %}
{% block title "Nouvelle Etablissement" %}
{% block body %}
    <div class="container mt-5">
        <h1>Nouvelle etablissement</h1>
        <div>
            {{ form_start(form)}}

            <div class="row">
                <div class="col-4">{{ form_row(form.name) }}</div>
                <div class="col-8">{{ form_row(form.address) }}</div>
                <div class="col-6">{{ form_row(form.lat) }}</div>
                <div class="col-6">{{ form_row(form.lng) }}</div>
                <div class="col-6">{{ form_row(form.price) }}</div>
                <div class="col-6">{{ form_row((form.open)) }}</div>
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            {{ form_rest(form) }}
            <button class="btn btn-success">Ajouter</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


