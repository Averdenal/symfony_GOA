<div class="col-3">
    <div class="mt-2 card_Badge text-center">
        <div class="exp_badges"><p>+<spam>{{ badge.exp}}</spam> Exp</p></div>
        <img src="{{ asset( badge.picture.url ) }}" alt="" class="mt-4 mb-4">
        <h4>{{ badge.name}}</h4>
        <p  class="badges_Card_Description">{{ badge.description}}</p>
        <div class="progress_Badges">
            <div class="progress" {% if user is not null %}style="width: 40%"{% endif %}></div>
        </div>
        <p class="status_Badges">{% if user is null %}Lock{% else %}40/100{% endif %}</p>
    </div>
</div>